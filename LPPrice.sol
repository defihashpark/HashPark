interface IPancakePair {
    function token0() external view returns (address);
    function token1() external view returns (address);
    function getReserves()
        external
        view
        returns (
            uint112 reserve0,
            uint112 reserve1,
            uint32 blockTimestampLast
        );
}

contract PancakePair
{

    address _token0;
    address _token1;
    address _goatTrade;
    using SafeMath for uint256;
 
    //tokenUsdt usdt token address
    //
    //goatTrade usdt-goat pool address
    constructor (address tokenUsdt,address goatTrade)
    {
        _token0 = tokenUsdt;
        _token1 = goatTrade;
        _goatTrade = goatTrade;
    }
  
    function token0() public view returns (address){return _token0;}
    function token1() public view returns (address) {return _token1;}
    function getReserves() public view returns (uint112 , uint112 , uint32 ){

        (uint112 _reserve0, ,  ) = IPancakePair(_goatTrade).getReserves();

        uint256 total = IBEP20(_goatTrade).totalSupply();
        uint256 usdt = _reserve0;
        usdt = usdt.mul(2);

        uint112 reserve0 = 1e18;
        uint112 reserve1 = uint112(total.mul(1e18).div(usdt));
        uint32 blockTimestampLast = uint32(block.number);
        return (reserve0,reserve1,blockTimestampLast);
    }
}